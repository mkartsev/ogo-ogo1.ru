            img.seni-card__img(src="./img/active.jpg", alt="Seni Active")
          .seni-card__content
            img.seni-card__goods(src="./img/active-goods.png", alt="Урологические трусы")
            span.seni-card__title Seni Active
            span.seni-card__subtitle Урологические трусы
        a.seni-card(href="#")
          .seni-card__cover
