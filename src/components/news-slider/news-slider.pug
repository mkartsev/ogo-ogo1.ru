include ../news-card/news-card

mixin news-slider()
  .news-slider.swiper&attributes(attributes)
    .news-slider__wrapper.swiper-wrapper
      each item in news
        .news-slider__slide.swiper-slide
          +news-card(item)
    .news-slider__prev.swiper-button-prev
    .news-slider__next.swiper-button-next
    .news-slider__pagination.swiper-pagination